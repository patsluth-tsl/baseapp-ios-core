fastlane_version '2.69.2'

default_platform :ios

platform :ios do
	module SharedValues
   		SELECTED_BUMP_TYPE = nil
 	end

	BUMP_TYPES = [
		'patch',
		'minor',
		'major',
	].freeze

	# xcode_project = Xcodeproj::Project.open_dir('../')
